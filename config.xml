<?xml version='1.0' encoding='utf-8'?>
<widget id="com.siapjalan.dishub" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Siap Jalan</name>
    <description>
       Siap Jalan for Dishub Mojokerto Kota.
    </description>
    <author email="nizarkusworo@gmail.com" href="https://github.com/nizarrk">
        Nizar Rahman Kusworo
    </author>
    <content src="dist/index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="siapjalan:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="SplashScreenDelay" value="2000" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashScreen" value="splash" />
        <preference name="ShowSplashScreenSpinner" value="false"/>
        <preference name="FadeSplashScreen" value="false"/>
        <preference name="SplashShowOnlyFirstTime" value="false" />
        <preference name="SplashMaintainAspectRatio" value="true" />

        <icon src="assets/hdpi.png" density="hdpi" />
        <icon src="assets/xhdpi.png" density="xhdpi" />
        <icon src="assets/xxhdpi.png" density="xxhdpi" />
        <icon src="assets/xxxhdpi.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
